
<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="Start your development with a Dashboard for Node.js.">
  <meta name="author" content="run Tim">
  <title>Cortometrajes</title>
  <!-- Favicon -->
  <link href="img/favicon.ico" rel="icon" type="image/png">
  <!-- Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700" rel="stylesheet">
  <!-- Icons -->
  <link href="vendor/nucleo/css/nucleo.css" rel="stylesheet">
  <link href="vendor/@fortawesome/fontawesome-free/css/all.min.css" rel="stylesheet">
  <!-- Argon CSS -->
  <link type="text/css" href="css/argon.min.css" rel="stylesheet">

  <link href="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.css" rel="stylesheet">

  <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/bootstrap-table.min.js"></script>
  <script src="https://unpkg.com/bootstrap-table@1.16.0/dist/extensions/multiple-sort/bootstrap-table-multiple-sort.js"></script>
</head>
  
<body>
  <!-- Sidenav -->
  <%- include ('partials/sidebar'); -%>
  <!-- Main content -->
  <div class="main-content">
    <!-- Top navbar -->
    <%- include ('partials/navbar'); -%>
    <!-- Header -->
    <%- include ('partials/header'); -%>
    <!-- Page content -->
    <div class="container-fluid mt--7">
      <div class="row">
        <div class="col">
          <div class="card shadow">
            <div class="card-header bg-transparent">
              <div class="row align-items-center">
                <div class="col">
                  <h6 class="text-uppercase text-muted ls-1 mb-1">Cortometrajes</h6>
                  <h2 class="mb-0">Listado de cortometrajes</h2>
                </div>
                <div class="col text-right">
                  <a href="/addFilm" class="btn btn-info">Añadir película</a>
                </div>
              </div>
            </div>
            <div class="card-body">
              <!-- Chart -->
              <table
                    id="table"
                    data-sort-name="date"
                    data-sort-order="desc"
                    data-search="true"
                    data-pagination="true"
                    data-show-export="true"
                    data-show-extended-pagination="true"    
                    data-filter-control="true"
                    data-locale="en-US">
                    <thead>
                      <tr>
                        <th data-field="title" data-sortable="true">Nombre película</th>
                        <th data-field="duration" data-sortable="false">Duración</th>
                        <th data-field="company" data-filter-control="select">Empresa</th>
                        <th data-field="director" data-sortable="true">Director</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% films.forEach(film => { %>
                        <tr>
                          <th scope="row">
                            <a href="/film:=<%= film.id %>" value="visit"> <%= film.title %> </a>
                          </th>
                          <td><%= film.duration %></td>
                          <td><%= film.company %></td>
                          <td><%= film.director %></td>
                        </tr>
                      <% }) %>
                      <tr>
                        <th scope="row">Sinister</th>
                        <td>Mark</td>
                        <td>Twain</td>
                        <td>@mdooo</td>
                      </tr>
                    </tbody>
                  </table>
            </div>
          </div>
        </div>
      </div>
  <!-- Include scripts -->
  <%- include ('partials/scripts'); -%>

</body>
</html>

