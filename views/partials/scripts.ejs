<script>
  document.addEventListener('DOMContentLoaded', colorChange); 
  document.getElementById('ok').onchange = function() {colorChange()};
  function colorChange() {
    let val = document.getElementById('ok').value;
    if(val === "y") {
      setColors("#f7f7f7", "#5cb85c")
    }
    else if(val === "n") {
      setColors("#f7f7f7", "#d9534f")
    }
    else if (val === "pen"){
      setColors("#f7f7f7", "#f0ad4e")
    }
  }

  function setColors(color, background) {
      document.getElementById('ok').style.color  = color;
      document.getElementById('ok').style.backgroundColor  = background;
  }
</script>